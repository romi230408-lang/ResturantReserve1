<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ResturantReserve.ViewModels"
             xmlns:m="clr-namespace:ResturantReserve.Models"
             x:Class="ResturantReserve.Views.RegisterPage"
             x:DataType="vm:RegisterPageVM">
    <VerticalStackLayout Spacing="25" Margin="10">
        <Entry  Placeholder="{x:Static m:Strings.Name}" Text="{Binding Name}"/>
        <Entry Placeholder="{x:Static m:Strings.Email}" Text="{Binding Email}"/>
        <Entry Placeholder="{x:Static m:Strings.Password}" Text="{Binding Password}"/>
        <Button Text="{x:Static m:Strings.Register}" Command="{Binding RegisterCommand}"/>
    </VerticalStackLayout>
</ContentPage>